<?xml version="1.0" encoding="utf-8" ?>

<MockServices>
  
  <!--
  Scenario-1 : Serve a static file for a given URL
  -->
  <MockService>
    
    <Request Url="http://staticurl.com">
    </Request>
    
    <Response HandlerType="Static">
        <Handler>
          <Directory Name="directoryname">
            <File Name="one.xml"/>
          </Directory> 
        </Handler>
    </Response>
    
  </MockService>


  <!--
  Scenario-2 : Modify the response from a URL and serve the content
  -->
  <MockService>

    <Request Url="http://modifyresponsefromurl.com">
    </Request>

    <Response HandlerType="FromAssembly">
        <Handler>
          <Assembly Name="" Directory=""></Assembly>
          
        </Handler>
    </Response>

  </MockService>
  
  
</MockServices>
